{
  "name": "noise-maker",
  "version": "1.0.0",
  "type": "module",
  "description": "Makes noise based SVG patterns/textures",
  "homepage": "https://github.com/FiniteLooper/noise-maker#readme",
  "author": {
    "name": "Chris Barr",
    "url": "https://chrisbarr.me"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FiniteLooper/noise-maker.git"
  },
  "bugs": {
    "url": "https://github.com/FiniteLooper/noise-maker/issues"
  },
  "keywords": [],
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  },
  "license": "MIT",
  "scripts": {
    "build": "npm run build:ts && npm run build:sass",
    "build:sass": "node sass-build.js",
    "build:ts": "tsc && esbuild app/index.js --minify --allow-overwrite --outfile=app/index.js",
    "lint": "npx eslint .",
    "watch:sass": "sass -w src:app",
    "watch:scss": "npm run watch sass",
    "watch:ts": "tsc -w"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.2.6",
    "@types/jquery": "^3.5.16",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "esbuild": "^0.19.2",
    "eslint": "^8.47.0",
    "sass": "^1.66.1",
    "typescript": "^5.1.6"
  }
}
